<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp"
    android:weightSum="9">


    <ImageView
        android:id="@+id/edRun"
        style="@style/editor_buttons"
        android:src="@drawable/run"
        app:tint="@color/dark_blue" />

    <ImageView
        android:id="@+id/edUndo"
        style="@style/editor_buttons"
        android:src="@drawable/undo" />

    <ImageView
        android:id="@+id/edRedo"
        style="@style/editor_buttons"
        android:src="@drawable/redo" />

    <ImageView
        android:id="@+id/edShare"
        style="@style/editor_buttons"
        android:src="@drawable/share" />

    <ImageView
        android:id="@+id/edOpen"
        style="@style/editor_buttons"
        android:src="@drawable/open"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/edNew"
        style="@style/editor_buttons"
        android:src="@drawable/new_script" />

    <ImageView
        android:id="@+id/edSave"
        style="@style/editor_buttons"
        android:src="@drawable/save" />


    <ImageView
        android:id="@+id/edClear"
        style="@style/editor_buttons"
        android:src="@drawable/clear" />


    <ImageView
        android:id="@+id/edDarkMode"
        style="@style/editor_buttons"
        android:src="@drawable/dark_mode" />

    <ImageView
        android:id="@+id/edLines"
        style="@style/editor_buttons"
        android:src="@drawable/lines" />

</LinearLayout>
